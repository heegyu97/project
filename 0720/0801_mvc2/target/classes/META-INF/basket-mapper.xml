<mapper namespace="BasketMapper">
	
	
	<delete id="delete" parameterType="kr.co.ictedu.util.dto.BasketDTO">
	delete from basket 
	where b_no = #{b_no}
	</delete>
	
	
	
	
	<update id="updatebuyqty" parameterType="kr.co.ictedu.util.dto.BasketDTO">
	update basket 
